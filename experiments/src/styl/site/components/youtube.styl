/**
 * Youtube
 */

.Youtube {
}

.YoutubeMix {
	width:100%;
	maxWidth:1280px;
	maxHeight:720px;
	video{
		width: 480px;
		height: 270px;
	}
	input{
		color:#222;
	}
}

.YoutubeThree {
	width:100%;
	maxWidth:1280px;
	maxHeight:720px;
	video{
		position: absolute;
		left:0;
		top:0;
		display: none;
	}
	input{
		color:#222;
	}
}

.ThreeView{
	video{
		display:none;
	}
}

#three{
	position: absolute;
	top:0;
	left:0;
	z-index:1;
}

.dg.ac{
	z-index: 4 !important;
}

.ThreeFonts{
	position: absolute;
	bottom:0;
	left:0;
	right:0;
	margin: auto;
	z-index:3;
	font-size: 50px;
	text-align: center;
	letter-spacing: 4px;
	opacity: .65;

	  text-shadow: 0 1px 0 rgba(100,102,102,.5),
               0 2px 0 rgba(12,12,12,.5),
               0 3px 0 rgba(50,50,50,.4),
               0 4px 0 rgba(70,70,70,.5),
               0 5px 0 rgba(150,150,150,.5),
               0 6px 1px rgba(0,0,0,.1),
               0 0 5px rgba(0,0,0,.1),
               0 1px 3px rgba(0,0,0,.3),
               0 3px 5px rgba(0,0,0,.2),
               0 5px 10px rgba(0,0,0,.25),
               0 10px 10px rgba(0,0,0,.2),
               0 20px 20px rgba(0,0,0,.15);
}

.YoutubePlayer {
	width:100%;
	video{
		position: absolute;
		top:0;
		left:0;
		width:100%;
		height: 270px;
	}
}

.YoutubeButton{
	width: 100px;
	height:50px;
	background-color:#222;
	cursor: pointer;
	color:#FFF;
}

.YoutubeKeywords{
	width: 100%;
}